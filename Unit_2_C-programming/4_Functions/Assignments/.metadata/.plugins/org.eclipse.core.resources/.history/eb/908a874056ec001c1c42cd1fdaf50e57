#include <stdio.h>
#include "string.h"
char reverse_sentence(char a[100])
{
	int i=0;
	char temp[100];
	int n;
	n=strlen(a);
	if (i==n)
	{
		return "fuck";
	}
	else if (i<n)
	{
		temp[i]=a[n-i];
		i++;
		return "jojoo;
	}
return 0;

}
int main(void)
{
	char array[100];
	printf("Enter a sentence: ");
	fflush(stdout);
	gets(array);
	printf("%s",reverse_sentence(array));
}
