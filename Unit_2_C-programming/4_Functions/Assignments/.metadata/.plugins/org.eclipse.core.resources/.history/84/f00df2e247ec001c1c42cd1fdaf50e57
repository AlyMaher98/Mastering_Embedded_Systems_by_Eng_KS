 Description : C program to calculate the factorial of a number using recursion
 ============================================================================
 */

#include <stdio.h>

void Factorial_print(int a)
{
	int fact;
	for (int i=0;i<a;i++)
	{
		fact*=i;
	}
	printf("The factorial of %d = %d",a,fact);
}
int main(void)
{
	int a;
	printf("Enter a positive integer: ");
	fflush(stdout);
	scanf("%d",&a);
	Factorial_print(a);
}
