 Description : Write a program in C to print a string in reverse using a pointer
 ============================================================================
 */

#include <stdio.h>
#include "string.h"
int main(void)
{
	char str[50];
	int len;
	int i;
	char *strptr;
	printf("Enter a string \n");
	fflush(stdout);fflush(stdin);
	gets(str);
	len=strlen(str);
	strptr=(str+len-1);
	for(i=len;i>=0;i--)
	{
		printf("%c",*strptr+i);

	}

}
