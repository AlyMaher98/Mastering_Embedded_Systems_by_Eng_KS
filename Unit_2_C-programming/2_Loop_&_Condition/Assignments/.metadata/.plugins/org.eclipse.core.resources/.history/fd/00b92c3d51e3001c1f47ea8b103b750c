#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	int fact=0;
	int x;
	printf("Enter an integer : ");
	fflush(stdout);
	scanf("%d",&x);
	for (int i=0;i<=x;i++)
	{
		fact*=i;
	}
	printf("fact = %d ",fact);
}
