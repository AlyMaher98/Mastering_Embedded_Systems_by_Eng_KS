#include <stdio.h>
#include <string.h>

int main(void)
{
	char string[100];
	int n;
	printf("Enter a string: ");
	fflush(stdout);
	gets(string);
	n=strlen(string);
	printf("reverse of string: ");
	for(int i=0;i<=n;i++)
	{
		char temp[100];
		temp[i]=string[n-i];
		printf("%c",temp[i]);
	}
}
